def toStr(value)
	return value.to_s
end

def unEqual(actual, expected)
	return actual != expected
end

def verEqual(actual, expected, lineNo)
	if unEqual(actual, expected)
		puts "!!"+"!! test failed, `#actual` != `#expected`.\nShould be: \n = #actual"
	end
end

